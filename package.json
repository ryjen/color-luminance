{
  "name": "color-luminance",
  "version": "1.2.0",
  "description": "Detects if a color is dark or light. It is based on the w3 documentation for color luminance: https://www.w3.org/TR/WCAG20/#relativeluminancedef",
  "main": "dist/index.js",
  "scripts": {
    "test": "npx flow && jest --config .jestrc.json src",
    "build": "npm test && npx babel src --out-file index.js --ignore 'src/**/*.test.js'",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ryjen/color-luminance.git"
  },
  "keywords": [
    "color",
    "luminance",
    "dark",
    "light",
    "rgb",
    "hex"
  ],
  "author": "Ryan Jennings <ryan@micrantha.com> based on work by Gion <bogdan.gradinariu@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ryjen/color-luminance/issues"
  },
  "homepage": "https://github.com/ryjen/color-luminance/#readme",
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-flow": "^7.9.0",
    "@babel/register": "^7.9.0",
    "babel-eslint": "^10.1.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "chai": "^4.1.2",
    "eslint": "^6.8.0",
    "eslint-import-resolver-babel-module": "^5.1.2",
    "eslint-plugin-flowtype": "^4.7.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.8.2",
    "flow": "^0.2.3",
    "flow-bin": "^0.121.0",
    "jest": "^25.2.3"
  }
}
